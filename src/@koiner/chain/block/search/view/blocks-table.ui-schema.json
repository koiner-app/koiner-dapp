{
  "type": "object",
  "elements": [
    {
      "type": "TableView",
      "elements": [
        {
          "type": "Attribute",
          "label": "Height",
          "scope": "#/properties/height",
          "options": {
            "mapping": "header.height"
          }
        },
        {
          "type": "Attribute",
          "label": "Age",
          "scope": "#/properties/timestamp",
          "options": {
            "format": "age",
            "mapping": "header.timestamp"
          }
        },
        {
          "type": "Attribute",
          "label": "Transactions",
          "scope": "#/properties/transactionCount"
        },
        {
          "type": "Attribute",
          "label": "Producer",
          "scope": "#/properties/reward.producerId",
          "options": {
            "format": "address",
            "mapping": "reward.producerId"
          }
        },
        {
          "type": "AttributeGroup",
          "label": "Block reward",
          "scope": "#/properties/reward",
          "elements": [
            {
              "type": "Attribute",
              "scope": "#/properties/reward.value",
              "options": {
                "format": "koinTokenAmount",
                "mapping": "reward.value"
              }
            },
            {
              "type": "Attribute",
              "scope": "#/properties/reward.contractId",
              "options": {
                "format": "tokenAmount",
                "mapping": "reward.contractId"
              }
            }
          ]
        },
        {
          "type": "AttributeGroup",
          "label": "Actions",
          "scope": "actions",
          "elements": [
            {
              "type": "Attribute",
              "label": "Actions",
              "scope": "#/properties/height",
              "options": {
                "route": "block",
                "icon": "link",
                "format": "button",
                "button": {
                  "size": "xs",
                  "flat": true,
                  "dense": true,
                  "round": true
                }
              }
            }
          ]
        }
      ]
    }
  ]
}
