{
  "type": "VerticalLayout",
  "options": {
    "i18n": "koiner.ecosystem.project.form.addProject"
  },
  "elements": [
    {
      "type": "Group",
      "label": "sections.projectDetails",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/name",
          "counter": false
        },
        {
          "type": "Control",
          "scope": "#/properties/description",
          "options": {
            "type": "textarea",
            "rows": 3,
            "counter": false
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/links",
          "options": {
            "type": "textarea",
            "rows": 3,
            "counter": false
          }
        }
      ]
    },
    {
      "type": "Group",
      "label": "sections.contactInformation",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/contactName",
          "options": {
            "counter": false
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/contactDiscord",
          "options": {
            "counter": false
          }
        }
      ]
    },
    {
      "type": "Group",
      "options": {
        "class": "actions"
      },
      "elements": [
        {
          "type": "Button",
          "scope": "#/properties/cancel",
          "i18n": "appvise.form.action.cancel",
          "options": {
            "flat": true
          }
        },
        {
          "type": "Button",
          "scope": "#/properties/submit",
          "options": {
            "type": "submit",
            "color": "primary"
          }
        }
      ]
    }
  ]
}
