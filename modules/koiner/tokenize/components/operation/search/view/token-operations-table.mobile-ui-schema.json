{
  "type": "object",
  "elements": [
    {
      "type": "TableView",
      "options": {
        "search": {
          "provider": "tokenOperations"
        }
      },
      "elements": [
        {
          "type": "AttributeGroup",
          "label": "Age / Bx",
          "scope": "#/properties/group1",
          "options": {
            "class": "attribute-wrapper--group-1"
          },
          "elements": [
            {
              "type": "Attribute",
              "label": "Age",
              "scope": "#/properties/timestamp",
              "options": {
                "format": "age",
                "mapping": "timestamp",
                "class": "attribute-wrapper--age"
              }
            },
            {
              "type": "Attribute",
              "label": "Block",
              "scope": "#/properties/blockHeight",
              "options": {
                "class": "attribute-wrapper--block-height",
                "route": "mobile.block",
                "format": "link",
                "linkParams": ["height"],
                "mapping": "blockHeight",
                "mappings": {
                  "height": "blockHeight"
                }
              }
            }
          ]
        },
        {
          "type": "AttributeGroup",
          "label": "From / To",
          "scope": "#/properties/group2",
          "options": {
            "class": "attribute-wrapper--group-2"
          },
          "elements": [
            {
              "type": "Attribute",
              "label": "From",
              "scope": "#/properties/from",
              "options": {
                "format": "address",
                "mapping": "from",
                "route": "mobile.address",
                "class": "attribute-wrapper--address"
              }
            },
            {
              "type": "Attribute",
              "label": "To",
              "scope": "#/properties/to",
              "options": {
                "format": "address",
                "mapping": "to",
                "route": "mobile.address",
                "class": "attribute-wrapper--address"
              }
            }
          ]
        },
        {
          "type": "AttributeGroup",
          "label": "Value / Type",
          "scope": "#/properties/group3",
          "options": {
            "class": "attribute-wrapper--group-3"
          },
          "elements": [
            {
              "type": "Attribute",
              "label": "Value",
              "scope": "#/properties/value",
              "options": {
                "decimals": 1,
                "format": "tokenAmount",
                "mapping": "value",
                "mappings": {
                  "contract.id": "contract.id",
                  "contract.name": "contract.name",
                  "contract.symbol": "contract.symbol",
                  "contract.decimals": "contract.decimals"
                }
              }
            },
            {
              "type": "Attribute",
              "scope": "#/properties/name",
              "options": {
                "format": "tokenEventName",
                "mapping": "name",
                "class": "attribute--icon"
              }
            }
          ]
        }
      ]
    }
  ]
}
