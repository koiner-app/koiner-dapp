{
  "type": "object",
  "elements": [
    {
      "type": "TableView",
      "options": {
        "search": {
          "provider": "blockRewards"
        }
      },
      "elements": [
        {
          "type": "AttributeGroup",
          "label": "Block",
          "scope": "#/properties/blockGroup",
          "options": {
            "class": "attribute-wrapper--block-group"
          },
          "elements": [
            {
              "type": "Attribute",
              "label": "Producer",
              "scope": "#/properties/producerId",
              "options": {
                "format": "address",
                "mapping": "producerId",
                "route": "address.rewards",
                "class": "attribute-wrapper--address"
              }
            },
            {
              "type": "Attribute",
              "label": "Height",
              "scope": "#/properties/blockHeight",
              "options": {
                "route": "block",
                "format": "link",
                "linkParams": ["height"],
                "mapping": "blockHeight",
                "mappings": {
                  "height": "blockHeight"
                }
              }
            },
            {
              "type": "Attribute",
              "label": "Age",
              "scope": "#/properties/timestamp",
              "options": {
                "format": "age",
                "mapping": "timestamp",
                "class": "attribute-wrapper--age"
              }
            }
          ]
        },
        {
          "type": "AttributeGroup",
          "label": "Mint + Burn",
          "scope": "#/properties/rewardsGroup",
          "options": {
            "class": "attribute-wrapper--rewards-group"
          },
          "elements": [
            {
              "type": "AttributeGroup",
              "label": "Block reward",
              "scope": "#/properties/reward",
              "elements": [
                {
                  "type": "Attribute",
                  "scope": "#/properties/value",
                  "options": {
                    "format": "koinTokenAmount",
                    "mapping": "value",
                    "decimals": 4
                  }
                }
              ]
            },
            {
              "type": "AttributeGroup",
              "label": "Burned VHP",
              "scope": "#/properties/burned",
              "elements": [
                {
                  "type": "Attribute",
                  "scope": "#/properties/burnedValue",
                  "options": {
                    "format": "vhpTokenAmount",
                    "mapping": "burnedValue",
                    "decimals": 4
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
