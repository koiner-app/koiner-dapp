{
  "type": "object",
  "elements": [
    {
      "type": "TableView",
      "options": {
        "search": {
          "provider": "blockProducers"
        }
      },
      "elements": [
        {
          "type": "Attribute",
          "label": "#",
          "scope": "#/properties/id",
          "options": {
            "format": "index"
          }
        },
        {
          "type": "Attribute",
          "label": "Address",
          "scope": "#/properties/addressId",
          "options": {
            "format": "address",
            "route": "address.rewards",
            "class": "attribute-wrapper--address"
          }
        },
        {
          "type": "Attribute",
          "label": "Total rewards",
          "scope": "#/properties/balance",
          "options": {
            "format": "koinTokenAmount",
            "mapping": "balance",
            "decimals": 8
          }
        },
        {
          "type": "Attribute",
          "label": "Blocks",
          "scope": "#/properties/blocksProduced"
        }
      ]
    }
  ]
}
