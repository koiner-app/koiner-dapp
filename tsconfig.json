{
  "extends": "@quasar/app-vite/tsconfig-preset",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@desktop": ["./apps/desktop"],
      "@desktop/*": ["./apps/desktop/*"],
      "@mobile": ["./apps/mobile"],
      "@mobile/*": ["./apps/mobile/*"],
      "@appvise": ["./modules/appvise"],
      "@appvise/*": ["./modules/appvise/*"],
      "@koiner": ["./modules/koiner"],
      "@koiner/*": ["./modules/koiner/*"],
      "src/*": ["src/*"],
      "app/*": ["*"],
      "components/*": ["src/components/*"],
      "layouts/*": ["src/layouts/*"],
      "pages/*": ["src/pages/*"],
      "assets/*": ["src/assets/*"],
      "boot/*": ["src/boot/*"],
      "stores/*": ["src/stores/*"],
    }
  },
  "include": [
    "apps/**/*.ts",
    "apps/**/*.d.ts",
    "apps/**/*.tsx",
    "apps/**/*.vue",
    "modules/**/*.ts",
    "modules/**/*.d.ts",
    "modules/**/*.tsx",
    "modules/**/*.vue",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src-pwa/*.d.ts",
    "src-bex/*.d.ts",
    "src-ssr/*.d.ts"
  ]
}
